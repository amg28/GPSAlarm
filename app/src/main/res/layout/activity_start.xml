<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="a1stgroup.gpsalarm.MyStartActivity"
    android:layout_height="match_parent">

     <Button
        android:text="To Map"
        android:layout_height="60dp"
         android:background="@android:color/holo_green_light"
        android:id="@+id/ToMap"
         android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toMap"
        tools:ignore="HardcodedText"
        tools:layout_below="@+id/listView" />

    <ListView
        android:id="@+id/listViewRecent"
        android:layout_width="350dp"
        android:paddingTop="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/ToMap"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Recent:"
        android:paddingLeft="15dp"
        android:layout_below="@+id/ToMap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Your alarms:"
        android:paddingLeft="15dp"
        android:layout_below="@+id/listViewRecent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="350dp"
        android:paddingTop="0dp"
        android:layout_marginBottom="26dp"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/listViewRecent"
        android:layout_alignStart="@+id/listViewRecent" />

</RelativeLayout>